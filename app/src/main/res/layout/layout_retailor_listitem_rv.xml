<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <TableLayout
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginTop="5dp"
        >

    <TableRow>
        <TextView
            android:id="@+id/tv_retailer_each_item"
            android:text="PAZHAM"
            android:layout_width="100dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/poppins"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_retailer_listitem_cost"
            android:layout_weight=".5"
            android:fontFamily="@font/poppins"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="10rs"/>

        <TextView
            android:id="@+id/tv_retailer_listitem_stock"
            android:layout_weight=".5"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text="10" />


        <!--<ImageButton-->
            <!--android:id="@+id/bt_retailer_update"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/background"-->
            <!--app:srcCompat="@drawable/baseline_launch_black_18dp"-->
            <!--android:layout_marginRight="10dp"/>-->

        <ImageButton
            android:id="@+id/bt_retailer_update"
            android:text="UPDATE"
            android:textColor="#fff"
            android:layout_marginRight="10dp"
            android:src="@drawable/updateitem"
            android:background="@android:color/transparent"/>
        <CheckBox
            android:id="@+id/checkbox_retailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyCheckbox"/>

    </TableRow>

    </TableLayout>



</TableLayout>